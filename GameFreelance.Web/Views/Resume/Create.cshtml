@using (Html.BeginForm("Create", "Resume", FormMethod.Post))
{
    <form>
        <input type="hidden" name="">
        <div class="form-group">
            <label for="">Position</label>
            <input type="text" class="form-control" name="Position">
        </div>
       <div class="form-group">
            <label for="">Salary</label>
            <input type="number" class="form-control" name="Salary">
        </div>
        <div class="form-group">
            <label for="">Experience</label>
            <input type="number" name="Experience">
        </div>
        <div class="form-group">
            <label for="">Category</label>
            <input type="number" name="Category">
        </div>
        <div class="form-group">
            <label for="">Attainment</label>
            <input type="text" name="Attainment">
        </div>
        <div class="form-group">
            <label for="">ExperienceText</label>
            <textarea class="form-control" id="" rows="3" name="ExperienceText"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
}