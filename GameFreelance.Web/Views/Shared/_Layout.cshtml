@{
    string username = Context.User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GWork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GWork</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex bd-highlight">
                    <ul class="navbar-nav p-2 flex-grow-1 bd-highlight">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Resumes</a>
                        </li>
                        <li class="nav-item-end">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vacancy" asp-action="Index">Vacancy</a>
                        </li>
                    </ul>
                    
                    @if (username == null)
                    {
                        <ul class="navbar-nav p-2 bd-highlight">
                            <li class="nav-item">
                                <a class="btn btn-primary mr-2" asp-area="" asp-controller="Auth" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary mr-2" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Мой Аккаунт
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Мой Аккаунт</a>
                                <a class="dropdown-item">Создать Резюме</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Vacancy" asp-action="Create">Создать Вакансию</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Logout">Выйти</a>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - GameFreelance.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
