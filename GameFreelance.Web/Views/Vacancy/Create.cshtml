@using (Html.BeginForm("Create", "Vacancy", FormMethod.Post))
{
    <form>
        <input type="hidden" name="">
        <div class="form-group">
            <label for="">Vacancy Name</label>
            <input type="text" class="form-control" name="VacancyName">
        </div>
        <div class="form-group">
            <label for="">Experience</label>
            <input type="number" name="Experience">
        </div>
        <div class="form-group">
            <label for="">Category</label>
            <input type="number" name="Category">
        </div>
        <div class="form-group">
            <label for="">Example textarea</label>
            <textarea class="form-control" id="" rows="3" name="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
}